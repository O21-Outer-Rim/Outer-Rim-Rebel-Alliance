<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="OuterRim_UniformBodyFabricatedBase">
		<defName>OuterRim_RebelOfficerUniform</defName>
		<label>rebel officer uniform</label>
		<description>A durable military officer uniform, most famously used by the Rebel Alliance.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/RebelOfficer/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(255, 255, 255)</color>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>OuterRim_RebelArmory</researchPrerequisite>
		</recipeMaker>
		<apparel>
			<tags Inherit="False">
				<li>RebelOfficer</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/RebelOfficer/Apparel</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>OuterRim_ApparelRebelAlliance</li>
		</thingSetMakerTags>
	</ThingDef>

	<ThingDef ParentName="OuterRim_UniformHeadwearFabricatedBase">
		<defName>OuterRim_RebelOfficerCap</defName>
		<label>Rebel officer cap</label>
		<description>A durable utalitarian uniform used by officers of the Rebel Alliance.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/RebelOfficer/Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(255, 255, 255)</color>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>OuterRim_RebelArmory</researchPrerequisite>
		</recipeMaker>
		<apparel>
			<bodyPartGroups Inherit="False">
				<li>UpperHead</li>
			</bodyPartGroups>
			<tags Inherit="False">
				<li>RebelOfficer</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/RebelOfficer/Head</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>OuterRim_ApparelRebelAlliance</li>
		</thingSetMakerTags>
	</ThingDef>

</Defs>