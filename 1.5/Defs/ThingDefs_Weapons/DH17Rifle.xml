<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="OuterRimBlasterBase_Rifle">
		<defName>OuterRim_DH17Rifle</defName>
		<label>dh-17 blaster rifle</label>
		<description>The DH-17 blaster pistol was a close-combat blaster pistol produced by BlasTech Industries. This however is a rifle. Totally different, I'm sure of it.</description>
		<graphicData>
			<texPath>OuterRim/Weapons/DH17Rifle</texPath>
		</graphicData>
		<weaponTags>
			<li>ORRebelAny</li>
			<li>ORRebelStandard</li>
		</weaponTags>
		<tradeTags>
			<li>OuterRim_RebelWeapons</li>
		</tradeTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>OuterRim_Bullet_RifleRed</defaultProjectile>
